<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>

<h2> GRADE CALCULATOR </h2>
<label> Enter your mark (0-100): </label>
<input type="text" id="markInput">
<button onclick=mark()>Mark</button>

<h2 id="output"></h2>

<script>
    function mark() {
        let value = document.getElementById("markInput").value;
        let mark = parseInt(value);
        let grade; 
        
    if (mark === 100) { 
        grade = "Perfect";
    } else if (mark >= 90) {
        grade = "A+";
    } else if (mark >=80) {
        grade = "A";
    } else if (mark >=70) {
        grade = "B";
    } else if (mark >=60) {
        grade = "C";
    } else if (mark >=50) {
        grade = "D";
    } else if (mark <50) {
        grade = "FAIL"; }
    

    document.getElementById("output").innerHTML = `Your grade is: ${grade}`;
    }

   </script>
</body>
</html>
